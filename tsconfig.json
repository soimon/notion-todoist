{
	"extends": "./node_modules/gts/tsconfig-google.json",
	"compilerOptions": {
		"rootDir": ".",
		"outDir": "build",
		"esModuleInterop": true,
		"noUncheckedIndexedAccess": true,
		"resolveJsonModule": true,
		"lib": ["ES2020", "dom"],
		"baseUrl": "./src",
		"paths": {
			"@project/*": ["project/*"],
			"@lib/*": ["lib/*"]
		}
	},
	"include": ["src/**/*.ts", "test/**/*.ts"]
}
